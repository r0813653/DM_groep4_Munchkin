<Window x:Class="Munchkin_app.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Munchkin_app"
        mc:Ignorable="d"
        Title="InfoWindow" Height="800" Width="1280">
    <Window.Background>
        <ImageBrush ImageSource="images/Munchkin_background.jpeg"></ImageBrush>
    </Window.Background>
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Width="300" FontSize="80" Style="{StaticResource CustomButton}" Margin="20">Spelregels</Button>
            <Button Width="650" FontSize="80" Style="{StaticResource CustomButton}" Margin="20">Zoek jou favoriete kaarten</Button>
            <Button Width="240" FontSize="80" Style="{StaticResource CustomButton}" Margin="20">Credits</Button>
        </StackPanel>
        
    </Grid>
</Window>
